<?xml version="1.0"?>
<robot name="collision_demo">

  <!-- Table -->
  <link name="table">
    <visual>
      <geometry>
        <box size="3.0 3.0 0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="brown"/>
    </visual>
    <collision>
      <geometry>
        <box size="3.0 3.0 0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Base link of manipulator -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Joint 1 -->
  <joint name="joint1" type="revolute">
    <parent link="table"/>
    <child link="base_link"/>
    <origin xyz="0.1 0.1 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>    
  </joint>

  <!-- Link 1 -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Joint 2 -->
  <joint name="joint2" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <!-- Link 2 -->
  <link name="link2">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Joint 3 -->
  <joint name="joint3" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <!-- End-effector -->
  <link name="ee_link">
    <visual>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="ee_joint" type="fixed">
    <parent link="link2"/>
    <child link="ee_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
  </joint>

  <!-- Movable box -->
  <link name="box1">
    <visual>
      <geometry>
        <box size="0.3 0.2 0.15"/>
      </geometry>
      <origin xyz="0.56 0 0.05" rpy="0 0 0"/>
      <material name="yellow"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.2 0.15"/>
      </geometry>
      <origin xyz="0.56 0 0.05" rpy="0 0 0"/>
    </collision>
  </link>
  
  <!-- Movable box -->
  <link name="box2">
    <visual>
      <geometry>
        <box size="0.2 0.3 0.05"/>
      </geometry>
      <origin xyz="0.01 0.45 0.05" rpy="0 0.5 -0.5"/>
      <material name="yellow"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.3 0.05"/>
      </geometry>
      <origin xyz="0.01 0.45 0.05" rpy="0 0.5 -0.5"/>
    </collision>
  </link>
  
  <!-- Movable box -->
  <link name="box3">
    <visual>
      <geometry>
        <box size="0.08 0.08 0.08"/>
      </geometry>
      <origin xyz="1.45 0.02 0.05" rpy="0 0 0"/>
      <material name="yellow"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.08 0.08 0.08"/>
      </geometry>
      <origin xyz="1.45 0.02 0.05" rpy="0 0 0"/>
    </collision>
  </link>  
  
  <!-- Movable cylinder -->
  <link name="cylinder">
    <visual>
      <geometry>
        <cylinder radius="0.34" length="0.06"/>
      </geometry>
      <origin xyz="-0.45 0.1 0.05" rpy="-0.6 -0.2 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.2" length="0.06"/>
      </geometry>
      <origin xyz="-0.45 0.1 0.05" rpy="-0.6 -0.2 0"/>
    </collision>
  </link>

  <!-- Movable sphere -->
  <link name="sphere">
    <visual>
      <geometry>
        <sphere radius="0.3"/>
      </geometry>
      <origin xyz="0 -0.3 -0.125" rpy="0 0 0"/>
      <material name="cyan"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.3"/>
      </geometry>
      <origin xyz="0 -0.3 -0.125" rpy="0 0 0"/>
    </collision>
  </link>

</robot>
